<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/adimage">

    <RelativeLayout
        android:id="@+id/ree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/categoryImageC"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:scaleType="fitXY"
            android:src="@drawable/circle" />
        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignStart="@+id/categoryImageC"
            android:layout_alignTop="@+id/categoryImageC"
            android:layout_alignEnd="@+id/categoryImageC"
            android:layout_alignBottom="@id/categoryImageC"
            android:layout_margin="9dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        tools:ignore="RtlSymmetry"
        android:text="a"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@id/ree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>